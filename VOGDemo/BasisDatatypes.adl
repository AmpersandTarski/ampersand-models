{-
INTERFACE "Adres" (adresStraat,adresHuisnummer,adresPostcode,adresPlaats,adresLand) FOR Developer: I[Adres]
BOX[ "Straat"     : adresStraat
   , "Huisnummer" : adresHuisnummer
   , "Postcode"   : adresPostcode

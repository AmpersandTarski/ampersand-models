CONTEXT InterfaceShowcase IN ENGLISH
{- Example that showcases the differences between BOX, ROWS, COLS, and TABS.
-}

RELATION fruits[A*Fruit] = [ ("a1", "Lime");  ("a1", "Limorange");  ("a1", "Nectarine")
                      ; ("a2", "Banana"); ("a2", "Blueberry")
                      ]
RELATION trees[A*Tree] = [ ("a1", "Fern"); ("a1", "Willow")
                    ; ("a2", "Fern"); ("a2", "Spruce")
                    ]

RELATION dummy[SESSION*SESSION]


INTERFACE Main FOR Dummy : I[SESSION]
BOX
  [ "box" : V[SESSION*A]
    BOX
      [ "atom"   : I
      , "fruits" : fruits
      , "trees"  : trees
      ]
      
  , "rows" : V[SESSION*A]
    ROWS
      [ "atom"   : I
      , "fruits" : fruits
      , "trees"  : trees
      ]

  , "cols" : V[SESSION*A]
    COLS
      [ "atom"   : I
      , "fruits" : fruits
      , "trees"  : trees
      ]
  
  , "tabs" : V[SESSION*A]
    TABS
      [ "atom"   : I
      , "fruits" : fruits
      , "trees"  : trees
      ]
  ]

ENDCONTEXT
